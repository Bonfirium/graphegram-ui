{
	"extends": "airbnb",
	"env": {
		"browser": true,
		"jest": true
	},
	"plugins": [
		"react",
		"jsx-a11y",
		"import"
	],
	"rules": {
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-indent-props": [
			2,
			"tab"
		],
		"react/prefer-stateless-function": 0,
		"no-tabs": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"jsx-a11y/label-has-for": [
			2,
			{
				"components": [
					"label"
				],
				"required": {
					"some": [
						"nesting",
						"id"
					]
				},
				"allowChildren": false
			}
		]
	}
}
